<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_secondary"
    tools:context="com.locationtracker.one.ui.bank.BankActivity">

    <ListView
        android:id="@+id/bank_list_view"
        android:padding="@dimen/small_padding"
        android:clipToPadding="false"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:dividerHeight="@dimen/small_padding"
        android:divider="@drawable/tool_item_vertical_divider"
        android:scrollbars="none"
        app:layout_constraintBottom_toTopOf="@id/ad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:listitem="@layout/bank_item"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/ad"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/color_secondary">

        <com.google.android.gms.ads.AdView
            android:id="@+id/ad_banner_view"
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ads:adSize="BANNER"
            ads:adUnitId="@string/banner_ad_unit_id" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>